            %>
            
            <% if (hasActivity) { %>
              <div class="space-y-4">
                <% user.enrolledCourses.forEach(enrolledCourse => { 
                  if (enrolledCourse.course && enrolledCourse.completedSubtopics && enrolledCourse.completedSubtopics.length > 0) { 
                %>
                  <div class="bg-gray-50 rounded-lg p-4 flex gap-4">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-book-reader text-blue-600"></i>
                      </div>
                    </div>
