                        <% const expertWidth = Math.min(user.forumPosts.length / 50 * 100, 100) + '%'; %>
                        <div class="bg-blue-600 h-2 rounded-full progress-bar" data-width="<%= expertWidth %>"></div>
                      </div>
                      <span class="text-xs text-gray-500"><%= user.forumPosts.length %>/50 posts</span>
                    </div>
                  </div>
                <% } %>
                <% if (!hasBadge('Popular Post') && !user.forumPosts.some(post => post.likes && post.likes.length >= 10) && badgeCount < 3) { badgeCount++; %>
                  <div class="bg-gray-50 rounded-lg p-4 flex gap-4 opacity-70">
                    <div class="flex-shrink-0">
                      <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center">
                        <i class="fas fa-lock text-gray-400 text-xl"></i>
